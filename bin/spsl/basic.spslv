#VS_IN vec3 pos;
#VS_IN vec3 normal;
#VS_IN vec2 texcoord;

#VS_OUT vec3 vertex_pos;
#VS_OUT vec3 normal_out;
#VS_OUT vec2 tex_coords;

#UNIFORM mat4 uProj;
#UNIFORM mat4 uView;

void main() {
    spsl_position = mul(uProj, mul(uView, vec4(pos, 1.0)));
    vertex_pos = pos;
    normal_out = normal;
    tex_coords = texcoord;
}
