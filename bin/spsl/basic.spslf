#FS_IN vec3 obj_color;
#FS_IN vec3 vertex_pos;
#FS_IN vec3 normal_out;

#UNIFORM vec3 uColorMult;
#UNIFORM float uTime;

void main() {
    vec3 normal = normalize(normal_out);
    vec3 light_pos = vec3(3, 10, 5);
    vec3 light_dir = normalize(light_pos - vertex_pos);
    float light_intensity = max(dot(normal, light_dir), 0.0);
    vec3 light_color = vec3(1, 1, 1);
    vec3 color = obj_color * light_intensity * light_color;

    spsl_fragcolor = vec4(color, 1.0);




}