#FS_IN vec3 obj_color;
#FS_IN vec4 vertex_pos;
#FS_IN vec3 normal_out;

#UNIFORM vec3 uColorMult;
#UNIFORM float uTime;

void main() {
    vec3 lightPos = vec3(0.0, 5.0, 1.0);
    vec3 lightDir = normalize(lightPos - vertex_pos.xyz);
    vec3 normal = normalize(normal_out);
    float lightIntensity = max(dot(normal, lightDir), 0.0);
    vec3 lightColor = vec3(1.0, 1.0, 1.0);
    vec3 color = obj_color * lightColor * lightIntensity * uColorMult;
    spsl_fragcolor = vec4(color, 1.0);
}